@{
ViewData["Title"] = "Home";
}

<h2>Check The Weather</h2>

<form asp-controller="Weather" asp-action="GetWeather" method="post">
    <div class="form-group">
        <label for="city">City:</label>
        <input type="text" id="city" name="city" class="form-control" required />
    </div>

    <div class="form-group">
        <button type="submit" class="btn custom-btn">Get Weather</button>
    </div>
</form>

<style>
    .form-group label {
        display: block;
        margin-bottom: 5px;
    }
    .form-group input {
        margin-bottom: 15px;
    }
    .form-group button {
        margin-top: 10px;
    }

    .custom-btn {
        background-color: #28a745;
        border-color: #28a745;
        color: white;
    }

    .custom-btn:hover {
        background-color: #218838;
        border-color: #1e7e34;
    }

    .alert-danger {
        margin-top: 20px;
    }
</style>
